# Runtime
NODE_ENV=development
PORT=3000
DATA_DIR=./data

# Inbound SMTP recipient (Mailgun route should forward this to /webhooks/mailgun/inbound)
INBOUND_EMAIL_TO=deanpierce.eth@xmtp.mx

# XMTP bot (required)
XMTP_ENV=production
XMTP_BOT_KEY=
XMTP_DEAN_ADDRESS=deanpierce.eth
XMTP_ALLOWED_SENDERS=deanpierce.eth

# Installation safety (recommended for production)
# Refuse to register a new XMTP installation in production unless explicitly allowed.
XMTP_ALLOW_NEW_INSTALLATION=false
# Emergency recovery: if the inbox has hit the 10-installation limit, revoke older installations on startup.
XMTP_EMERGENCY_REVOKE_INSTALLATIONS=false
# Keep the bot limited to a single installation by revoking all others on startup.
XMTP_ENFORCE_SINGLE_INSTALLATION=true

# CLI helper: when revoking installations, keep N and revoke the rest.
XMTP_REVOKE_KEEP_INSTALLATIONS=1

# Optional (startup/error notifications over XMTP)
ADMIN_XMTP_ADDRESS=

# Optional (used to resolve ENS names like `name.eth`)
# Defaults to https://ethereum.publicnode.com (Ethereum mainnet).
ETH_RPC_URL=

# Mailgun (required)
MAILGUN_API_KEY=
MAILGUN_DOMAIN=xmtp.mx
MAILGUN_WEBHOOK_SIGNING_KEY=
MAILGUN_FROM="Dean (XMTP) <deanpierce.eth@xmtp.mx>"

# Webhook limits (optional)
WEBHOOK_RATE_LIMIT_WINDOW_MS=60000
WEBHOOK_RATE_LIMIT_MAX=60
MAX_INBOUND_FIELD_SIZE_BYTES=5242880

# Integration test (optional)
XMTP_TEST_SENDER_KEY=
XMTP_BOT_ADDRESS_OR_ENS=
TEST_EMAIL_RECIPIENT=
